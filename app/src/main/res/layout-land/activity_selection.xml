<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/selectBird"
        android:id="@+id/Message"
        android:gravity="center_vertical|center_horizontal"
        android:layout_margin="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:id="@+id/BananaSwallow"
            android:layout_margin="10dp">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:id="@+id/Swallow"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:padding="10dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/swallow"
                    android:id="@+id/SwallowText"
                    android:layout_gravity="start|center_vertical"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/swallow"
                    android:src="@drawable/swallow"
                    android:contentDescription="@string/swallow"
                    android:layout_gravity="end|center_vertical"
                    android:onClick="imageClicked"
                    android:clickable="true" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:id="@+id/Bananaquit"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:padding="10dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/bananaquit"
                    android:id="@+id/BananaText"
                    android:layout_gravity="start|center_vertical"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/banana"
                    android:src="@drawable/bananaquit"
                    android:contentDescription="@string/bananaquit"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:onClick="imageClicked"
                    android:clickable="true" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:id="@+id/Robin"
                android:padding="10dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/robin"
                    android:id="@+id/RobinText"
                    android:textStyle="bold"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/robin"
                    android:src="@drawable/robin"
                    android:contentDescription="@string/robin"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:onClick="imageClicked"
                    android:clickable="true" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:id="@+id/Parrot"
                android:padding="10dp"
                android:layout_weight="2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/parrot"
                    android:src="@drawable/parrot"
                    android:contentDescription="@string/parrot"
                    android:layout_gravity="end|center_vertical"
                    android:onClick="imageClicked"
                    android:clickable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/ParrotText"
                    android:textStyle="bold"
                    android:gravity="center_vertical|center_horizontal|start"
                    android:text="@string/parrot"
                    android:layout_gravity="start|center_vertical"
                    android:layout_margin="15dp" />
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/Ostrich"
            android:layout_margin="10dp"
            android:visibility="visible"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/ostrich"
                android:id="@+id/OstrichText"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal|top" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ostrich"
                android:src="@drawable/ostrich"
                android:contentDescription="@string/ostrich"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:onClick="imageClicked"
                android:clickable="true" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>