<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/selectBird"
        android:id="@+id/Message"
        android:gravity="center_vertical|center_horizontal"
        android:layout_margin="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/Robin"
            android:padding="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/robin"
                android:id="@+id/RobinText"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="false"
                android:layout_toStartOf="@+id/robin"
                android:layout_toLeftOf="@+id/robin"
                android:gravity="center_vertical"
                android:layout_alignBottom="@+id/robin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/bananaquit"
                android:id="@+id/BananaText"
                android:textStyle="bold"
                android:layout_alignTop="@+id/banana"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/banana"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/swallow"
                android:id="@+id/SwallowText"
                android:textStyle="bold"
                android:layout_alignTop="@+id/swallow"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical"
                android:layout_alignBottom="@+id/swallow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/ParrotText"
                android:textStyle="bold"
                android:text="@string/parrot"
                android:layout_alignTop="@+id/parrot"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/parrot"
                android:gravity="center_vertical" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/robin"
                android:src="@drawable/robin"
                android:contentDescription="@string/robin"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:onClick="imageClicked"
                android:clickable="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/banana"
                android:src="@drawable/bananaquit"
                android:contentDescription="@string/bananaquit"
                android:onClick="imageClicked"
                android:clickable="true"
                android:layout_below="@+id/robin"
                android:layout_alignRight="@+id/robin"
                android:layout_alignEnd="@+id/robin" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/swallow"
                android:src="@drawable/swallow"
                android:contentDescription="@string/swallow"
                android:onClick="imageClicked"
                android:clickable="true"
                android:layout_below="@+id/banana"
                android:layout_alignRight="@+id/banana"
                android:layout_alignEnd="@+id/banana" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/parrot"
                android:src="@drawable/parrot"
                android:contentDescription="@string/parrot"
                android:onClick="imageClicked"
                android:clickable="true"
                android:layout_below="@+id/swallow"
                android:layout_alignRight="@+id/swallow"
                android:layout_alignEnd="@+id/swallow" />

        </RelativeLayout>

        <FrameLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/Ostrich"
            android:layout_margin="10dp"
            android:visibility="visible"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/ostrich"
                android:id="@+id/OstrichText"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal|top" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ostrich"
                android:src="@drawable/ostrich"
                android:contentDescription="@string/ostrich"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:onClick="imageClicked"
                android:clickable="true" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>